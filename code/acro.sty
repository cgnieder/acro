            \msg_info:nnn {acro} {loading-module} {#1}
            \@onefilewithoptions
              {\c__acro_module_prefix_tl.#1}[][]
              \c__acro_module_extension_tl
            \__acro_module_hook_use:nn {#1} {after}
          }
          { \msg_error:nnn {acro} {module-missing} {#1} }
      }
  }
