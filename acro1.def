\cs_generate_variant:Nn \__acro_declare_class:nn { V }

% extra information:
\cs_new:Npn \__acro_declare_extra:nn #1#2
  {
    \__acro_key_check:nn { #1 } { extra }
    \prop_put:Nnn \l__acro_extra_prop { #1 } { #2 }
