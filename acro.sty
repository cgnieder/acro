% #1: id
\cs_new_protected:Npn \acro_use:n #1
  {
    % get the acronym and the plural settings:
    \acro_get:n {#1}
    \acro_is_used:nTF {#1}
      {
        % this is not the first time
        \acro_write_indefinite:nn {#1} {short}
        \acro_acc_supp:nn
          {#1}
          { \acro_write_short:nV {#1} \l__acro_short_tl }
        \acro_endings:nn {#1} {short}
        \acro_after:n {#1}
      }
      {
        % this is the first time
        \bool_gset_true:c { g__acro_#1_first_use_bool }
        \acro_if_is_single:nTF {#1}
          { \acro_single:n {#1} }
          { 
            \UseInstance {acro-first} { \l__acro_first_instance_tl }
              {#1}
              { \l__acro_short_tl }
              { \l__acro_long_tl }
          }
      }
  }

\cs_new_protected:Npn \acro_single_form:nn #1#2
  {
    \acro_write_indefinite:nn {#1} {#2}
    \str_case:nnF {#2}
      {
        {long} {
          \acro_write_long:NV \l__acro_long_format_tl \l__acro_long_tl
          \acro_endings:nn {#1} {#2}
          \acro_cite:n {#1}
        }
        {first} {
          \UseInstance {acro-first} { \l__acro_first_instance_tl }
            {#1}
            { \l__acro_short_tl }
            { \l__acro_long_tl }
        }
      }
      {
        \use:c {acro_write_#2:nv} {#1} {l__acro_#2_tl}
        \acro_endings:nn {#1} {#2}
        \acro_cite:n {#1}
      }
  }
\cs_generate_variant:Nn \acro_single_form:nn {nV}

\cs_new_protected:Npn \acro_single:n #1
